# backend/.env.example

# --- Flask & Gunicorn Configuration ---
DEBUG=False
PORT=5000
# Set a long, random, and secret string for production
JWT_SECRET_KEY=your_super_secret_jwt_key_that_is_very_long

# --- PostgreSQL Database Configuration ---
# These variables are used by docker-compose to set up the DB container
# The DATABASE_URL is used by your Flask app to connect to it.
DATABASE_URL=postgresql://wovcc_user:your_strong_password@db:5432/wovcc_db
POSTGRES_USER=wovcc_user
POSTGRES_PASSWORD=your_strong_password
POSTGRES_DB=wovcc_db

# --- Stripe Configuration ---
STRIPE_SECRET_KEY=sk_...
STRIPE_PUBLISHABLE_KEY=pk_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRODUCT_ID=prod_...
STRIPE_PRICE_ID=price_...
STRIPE_SPOUSE_CARD_PRICE_ID=price_...

# --- Email (Brevo SMTP) Configuration ---
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=...
SMTP_PASSWORD=...
MAIL_DEFAULT_SENDER=noreply@yourdomain.com
CONTACT_RECIPIENT=info@yourdomain.com

# --- Mailchimp Configuration ---
MAILCHIMP_API_KEY=...
MAILCHIMP_LIST_ID=...

# --- Other Services ---
GOOGLE_MAPS_API_KEY=...
OPENAI_API_KEY=...
OPENAI_MODEL=gpt-3.5-turbo

# --- SEO Configuration ---
# Site base URL (canonical URL for your site, no trailing slash)
SITE_BASE_URL=https://wickersleycricket.com