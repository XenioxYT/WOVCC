[Unit]
Description=WOVCC Backend API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/wovcc-api
Environment="PATH=/usr/bin:/usr/local/bin"
Environment="PORT=5000"
Environment="DEBUG=false"
ExecStart=/usr/bin/python3 /var/www/wovcc-api/api.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

